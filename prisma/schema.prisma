datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Group {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  slug       String  @unique
  name       String
  bio        String?
  image      String?
  website    String?
  facebook   String?
  linkedin   String?
  twitter    String?
  eventbrite String?
  owner      User    @relation(fields: [ownerId], references: [id])
  ownerId    String  @db.ObjectId
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  first_name String
  last_name  String
  verified   Boolean? @default(false)
  password   String
  provider   String
  groups     Group[]
}
